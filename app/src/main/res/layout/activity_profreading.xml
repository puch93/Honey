<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@color/color_ec4e4e"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="6.7dp"
                android:paddingRight="6.7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_back_02" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 열람내역"
                android:textColor="@color/white_color"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/white_color"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_read01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="전체열람내역"
                    android:textColor="@color/col_profreading"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/iv_read01"
                    android:layout_width="match_parent"
                    android:layout_height="6px"
                    android:background="@drawable/sel_profreading" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_read02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="내가 본 프로필"
                    android:textColor="@color/col_profreading"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/iv_read02"
                    android:layout_width="match_parent"
                    android:layout_height="6px"
                    android:background="@drawable/sel_profreading" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_read03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="내 프로필 열람회원"
                    android:textColor="@color/col_profreading"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/iv_read03"
                    android:layout_width="match_parent"
                    android:layout_height="6px"
                    android:background="@drawable/sel_profreading" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />

        <LinearLayout
            android:id="@+id/ll_delete_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_delmsglist"
                android:layout_width="71dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/btn_delete"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택삭제"
                    android:textColor="@color/color_2f3942"
                    android:textStyle="bold"
                    android:textSize="11.8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/ll_onlinemem"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_b_blueline"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="접속중 회원"
                    android:textColor="@color/color_529ce7"
                    android:textStyle="bold"
                    android:textSize="11.8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_write"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/btn_red"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="글쓰기"
                    android:textColor="@color/white_color"
                    android:textSize="11.8dp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_profreading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>