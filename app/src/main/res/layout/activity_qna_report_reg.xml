<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_eaeaea"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/color_fafafa"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="23dp"
                android:paddingRight="13dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_back_190902" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고하기"
                android:textColor="@color/color_2"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />


        <!-- 1:1문의하기 -->

        <ScrollView
            android:id="@+id/sc_t01_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:id="@+id/ll_qnatype"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/getmarried_bg_qna_searchinputbg_190902"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="3dp">

                    <TextView
                        android:id="@+id/tv_qnatype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신고유형을 선택해주세요"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/getmarried_btn_drop_190902" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_photoarea"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/getmarried_bg_qna_photoarea_190902"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_qnacontents"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:id="@+id/iv_cameraimg"
                        android:layout_width="23dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/getmarried_btn_qna_addphoto_190902" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/getmarried_bg_qna_textinputbg_190902"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:visibility="gone"
                        android:background="@drawable/getmarried_bg_titlebar_190902"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연락처"
                            android:textColor="@color/color_4d4d4d"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="(필수)"
                            android:textColor="@color/color_ed1c24"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_cellnum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:background="@null"
                            android:hint="숫자만 입력하세요"
                            android:inputType="number"
                            android:textColor="@color/color_222222"
                            android:textSize="15dp" />
                    </LinearLayout>

<!--                    <ImageView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="2px"-->
<!--                        android:background="@drawable/getmarried_img_1pxline_190902" />-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="11dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="11dp">

                        <EditText
                            android:id="@+id/et_qcontents"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="신고내용을 입력해주세요"
                            android:textColor="@color/color_222222"
                            android:textColorHint="@color/color_aaaaaa"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_question"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/sel_searchenter_btn"
                    android:gravity="center"
                    android:text="신고등록"
                    android:textColor="@color/white_color"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>