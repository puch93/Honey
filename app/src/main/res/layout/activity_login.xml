<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/getmarried_bg_login_background_190902"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="42dp"
            android:paddingRight="42dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:adjustViewBounds="true"
                android:src="@drawable/getmarried_img_login_logo_190902" />


            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/getmarried_bg_login_inputbg_190902"
                android:hint="아이디를 입력하세요"
                android:inputType="textEmailAddress"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_34"
                android:textColorHint="@color/et_hint_color"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/getmarried_bg_login_inputbg_190902"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_34"
                android:textColorHint="@color/et_hint_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/sel_login_btn"
                android:gravity="center"
                android:text="로그인"
                android:textColor="@color/white_color"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_join"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/sel_login_btn2"
                    android:gravity="center"
                    android:text="회원가입"
                    android:textColor="@color/col_login_press"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/btn_findaccount"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/sel_login_btn2"
                    android:gravity="center"
                    android:text="ID/PW찾기"
                    android:textColor="@color/col_login_press"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_nomember_qna"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sel_login_btn2"
                android:gravity="center"
                android:text="비회원문의"
                android:textColor="@color/col_login_press"
                android:textSize="16dp" />

