<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/getmarried_bg_login_background_190902"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="42dp"
        android:paddingRight="42dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18.67"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40.3dp"
            android:adjustViewBounds="true"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15.54"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/login_input"
            android:hint="아이디를 입력하세요"
            android:inputType="textEmailAddress"
            android:paddingLeft="14dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color_34"
            android:textColorHint="@color/color_b9babb"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_input"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="14dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color_34"
            android:textColorHint="@color/color_b9babb"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/btn_login_red"
            android:gravity="center"
            android:text="로그인"
            android:textColor="@color/white_color"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.04"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_join"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login_black"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/white_color"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_findaccount"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login_white"
                android:gravity="center"
                android:text="ID/PW찾기"
                android:textColor="@color/color_2f3942"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_nomember_qna"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sel_login_btn2"
            android:gravity="center"
            android:text="비회원문의"
            android:textColor="@color/col_login_press"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="17.05"/>
    </LinearLayout>
</layout>