<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_eaeaea"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/color_fafafa"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="23dp"
                android:paddingRight="13dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_back_190902" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지인차단"
                android:textColor="@color/color_2"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="22dp">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_home_190902" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="홈으로"
                    android:textColor="@color/color_8345f3"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/getmarried_bg_noticelist_searchinputbg_190902"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:layout_weight="1"
                android:background="@null"
                android:hint="연락처를 입력해주세요"
                android:paddingLeft="16dp"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/ll_address_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0.2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="0.7dp"
                android:background="@drawable/sel_noticelist_search_btn"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차단하기"
                    android:textColor="@color/white_color"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- recyclerview area -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_online"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:background="@drawable/getmarried_bg_join_contboxbg02_190902" />

        <!--android:layout_marginTop="15dp"-->
        <TextView
            android:id="@+id/tv_unblock"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/sel_searchenter_btn"
            android:gravity="center"
            android:text="차단해제"
            android:textColor="@color/white_color"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>