<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/clayout_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white_color"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:orientation="horizontal"
            android:paddingBottom="7dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_profimg"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"

                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_noprofimg"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"

                    android:scaleType="centerInside" />


                <TextView
                    android:id="@+id/tv_intro_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/shape_circle_image"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/white_color"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="11dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_membertype"
                        android:layout_width="36.7dp"
                        android:layout_height="20.3dp"
                        android:background="@drawable/remarriage_bg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="재혼"
                        android:textColor="@color/white_color"
                        android:textSize="10.7dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_membernick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:includeFontPadding="false"
                        android:text="야친구하자"
                        android:textColor="@color/color_2f3942"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_login_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="오후 6:17"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="10.8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="2"
                    android:text="#신나는 하루하루 재미있는 일상공유\n#맛집투어 친구하자 친구"
                    android:textColor="@color/color_992f3942"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f4f4f4" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4.7dp"
            android:paddingBottom="4.7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_msgitem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:button="@drawable/sel_check_btn2"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="@color/color_4d4d4d"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hidename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○○"
                android:textColor="@color/color_4d4d4d"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/getmarried_img_textcutline_190902" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="여성"
                android:textColor="@color/women_color"
                android:textSize="12dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/getmarried_img_textcutline_190902" />


            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="40세"
                android:textColor="@color/color_4d4d4d"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/getmarried_img_textcutline_190902" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="서울"
                android:textColor="@color/color_4d4d4d"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_location_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="강남구"
                android:textColor="@color/color_4d4d4d"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/tv_chatcount"
                android:layout_width="31dp"
                android:layout_height="23dp"
                android:background="@drawable/message_bg_01"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="7"
                android:textColor="@color/white_color"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>