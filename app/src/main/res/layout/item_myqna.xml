<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:id="@+id/ll_all_area"
        android:orientation="horizontal"
        android:background="@drawable/getmarried_bg_qnalist_qnalistbg_190902"
        android:paddingLeft="7dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingBottom="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_noattach"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/getmarried_img_qnalist_noimg_190902" />

            <ImageView
                android:id="@+id/iv_attach"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/getmarried_bg_plistimgarea_190902" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qnastate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="답변완료"
                    android:textColor="@color/color_8345f3"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/getmarried_img_textcutline_190902" />


                <TextView
                    android:id="@+id/tv_regdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.08.17 08:13"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="13dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_qnatype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="로그인/접속오류"
                android:textColor="@color/color_222222"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_qnacontents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="로그인을 하려고 하는데 접속이 잘 안됩니다 확인해주세요"
                android:textColor="@color/color_4d4d4d"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>