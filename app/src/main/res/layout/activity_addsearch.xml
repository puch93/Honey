<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@color/white_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="6.7dp"
                android:paddingRight="6.7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_back" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가검색"
                android:textColor="@color/color_2"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="12.8dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="분류"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_marriage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_marriage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textStyle="bold"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="연봉"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_salary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_salary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="종교"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_religion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_religion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="학력"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_edu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_edu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="재산"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_property"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_property"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="흡연"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_smoke"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_smoke"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="혈액형"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_bloodtype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_bloodtype"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="자녀"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_children"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_children"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="음주량"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:id="@+id/ll_drinking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/tv_drinking"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_bg_search01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:text="자녀"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="12.8dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="전체"
                            android:textColor="@color/color_222222"
                            android:textSize="12.8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/getmarried_btn_drop_190902" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12.8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reg_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sel_search_btn"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:text="사진등록회원"
                    android:textColor="@color/col_addsearch_press"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/color_ec4e4e"
            android:gravity="center"
            android:text="검색하기"
            android:textColor="@color/white_color"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
</layout>