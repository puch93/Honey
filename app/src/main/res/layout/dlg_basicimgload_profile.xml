<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:background="@color/white_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_f6f6f6"
            android:text="사진 불러오기"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_222222"
            android:textSize="13dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="22dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="본인 식별이 어려운 경우 "
                    android:textColor="@color/color_222222"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증 불가"
                    android:textStyle="bold"
                    android:textColor="@color/color_ed1c24"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="합니다"
                    android:textColor="@color/color_222222"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이미지 도용 및 불건전한 사진은 "
                    android:textColor="@color/color_222222"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:textStyle="bold"
                    android:textColor="@color/color_ed1c24"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="됩니다"
                    android:textColor="@color/color_222222"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/btn_album"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingRight="2dp"
            android:layout_marginRight="14dp"
            android:text="앨범에서 가져오기"
            android:background="@drawable/btn_pop_gallery"/>


        <TextView
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8.3dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingRight="2dp"
            android:layout_marginRight="14dp"
            android:text="카메라로 촬영하기"
            android:background="@drawable/btn_pop_camera"/>

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8.3dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white_color"
            android:textSize="15dp"
            android:paddingRight="2dp"
            android:layout_marginRight="14dp"
            android:text="삭제하기"
            android:background="@drawable/btn_pop_camera"/>
    </LinearLayout>
</LinearLayout>