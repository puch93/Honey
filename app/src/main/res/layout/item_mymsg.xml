<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="17dp">

        <TextView
            android:id="@+id/tv_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/color_8345f3"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:includeFontPadding="false"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 3:16"
            android:textColor="@color/color_aaaaaa"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:includeFontPadding="false"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/iv_sendimg"
            android:layout_width="167dp"
            android:layout_height="167dp"
            android:visibility="gone"
            android:layout_marginRight="9dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네 안녕하세요~\n전 홍길동sdfdsfsdfdsf이라고 해요 ㅎㅎ"
            android:lineSpacingExtra="2dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="20dp"
            android:textSize="13dp"
            android:textColor="@color/white_color"
            android:background="@drawable/getmarried_bg_chat_chat02_190902"/>
    </LinearLayout>
</LinearLayout>