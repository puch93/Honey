            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="- 회원님의 프로필이 열람되면 알림을 받습니다"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/getmarried_bg_visited_inputbg_190902"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="19dp"
                android:paddingBottom="3dp">

                <CheckBox
                    android:id="@+id/cb_profread"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:button="@drawable/sel_check_btn2"
                    android:layoutDirection="rtl"
                    android:text="프로필열람 알림"
                    android:textColor="@color/color_222222"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="- 회원님이 찜을 받게되면 알림을 받습니다"
                android:textColor="@color/color_aaaaaa"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/getmarried_bg_visited_inputbg_190902"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="19dp"
                android:paddingBottom="3dp">

                <CheckBox
                    android:id="@+id/cb_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:button="@drawable/sel_check_btn2"
                    android:layoutDirection="rtl"
                    android:text="찜 알림"
                    android:textColor="@color/color_222222"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

