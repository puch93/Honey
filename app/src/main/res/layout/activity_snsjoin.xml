<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_join_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/img_join_logo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 가입 후 "
                        android:textColor="@color/color_4d"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수정이 불가 "
                        android:textColor="@color/color_txtred"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="합니다. 정확히 입력해주세요. *"
                        android:textColor="@color/color_4d"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_join_textbox02"
                        android:hint="이메일"
                        android:paddingBottom="2dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="2dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/color_34"
                        android:textColorHint="@color/et_hint_color"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="\u0040"
                        android:textColor="@color/et_hint_color"
                        android:textSize="14dp" />

                    <!-- 이메일  -->
                    <!--<android.support.v7.widget.AppCompatSpinner-->
                    <!--android:id="@+id/sp_portals"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@null"-->
                    <!--android:entries="@array/portals"-->
                    <!--android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>-->

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <LinearLayout
                            android:id="@+id/ll_portal_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_join_textbox02"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="17dp"
                            android:paddingRight="17dp">

                            <TextView
                                android:id="@+id/tv_portal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_4d"
                                android:textSize="14dp"
                                android:text="naver.com"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/btn_join_drop" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_portal_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_join_textbox02"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="17dp"
                            android:paddingRight="17dp"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/et_portal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:paddingBottom="2dp"
                                android:paddingLeft="7dp"
                                android:paddingRight="2dp"
                                android:paddingTop="2dp"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/color_34"
                                android:textColorHint="@color/et_hint_color"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/iv_input_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:src="@drawable/sel_lastname_btnclose" />

                        </LinearLayout>


                    </FrameLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_join_textbox01"
                    android:hint="비밀번호 (영어+숫자 4-12자)"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_34"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/et_pwcheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_join_textbox01"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_34"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="*최소 2자 최대 8자까지 사용할 수 있습니다."
                    android:textColor="@color/color_4d"
                    android:textSize="12dp" />
                <!--android:text="*한글만 사용할 수 있습니다.(2자-8자)"-->

                <EditText
                    android:id="@+id/et_memid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_join_textbox01"
                    android:hint="닉네임"
                    android:inputType="text"
                    android:maxLength="8"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_34"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <!-- 태어난 년도 -->
                    <!--<android.support.v7.widget.AppCompatSpinner-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="43dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="#ffffff"-->
                    <!--android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>-->

                    <LinearLayout
                        android:id="@+id/ll_birth_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_join_textbox04"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp">

                        <TextView
                            android:id="@+id/tv_birth_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_4d"
                            android:textSize="14dp"
                            android:text="태어난 년도"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_join_drop" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/rdo_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:button="@drawable/btn_radio"
                                android:text="\u0020\u0020남성"
                                android:textColor="@color/color_4d"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/rdo_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:button="@drawable/btn_radio"
                                android:text="\u0020\u0020여성"
                                android:textColor="@color/color_4d"
                                android:textSize="12dp" />

                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <!-- 지역선택 -->
                    <!--<android.support.v7.widget.AppCompatSpinner-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="43dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="#ffffff"-->
                    <!--android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>-->
                    <LinearLayout
                        android:id="@+id/ll_main_loc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_join_textbox04"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp">

                        <TextView
                            android:id="@+id/tv_main_loc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_4d"
                            android:textSize="14dp"
                            android:text="지역선택"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_join_drop" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <!-- 상세지역 -->
                    <!--<android.support.v7.widget.AppCompatSpinner-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="43dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="#ffffff"-->
                    <!--android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>-->
                    <LinearLayout
                        android:id="@+id/ll_middle_loc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_join_textbox04"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp">

                        <TextView
                            android:id="@+id/tv_middle_loc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_4d"
                            android:textSize="14dp"
                            android:text="상세지역"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_join_drop" />

                    </LinearLayout>
                </LinearLayout>
                <!-- 배우자 희망지역 -->
                <!--<android.support.v7.widget.AppCompatSpinner-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="43dp"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:background="#ffffff"-->
                <!--android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>-->
                <LinearLayout
                    android:id="@+id/ll_hope_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_join_textbox01"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp">

                    <TextView
                        android:id="@+id/tv_hope_loc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_4d"
                        android:textSize="14dp"
                        android:text="배우자 희망지역"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_join_drop" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_termtext_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/sel_check_box" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약관 및 개인정보 보호 정책에 동의합니다."
                            android:textColor="@color/color_4d"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_termview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="[보기]"
                        android:textColor="@color/color_txtred"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/sel_btn_login"
                    android:gravity="center"
                    android:text="가입완료"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>