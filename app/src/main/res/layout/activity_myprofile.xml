<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@color/white_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="6.7dp"
                android:paddingRight="6.7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_back" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 프로필"
                android:textColor="@color/color_2"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="9dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="11dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="9.3dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_profimg"
                                android:layout_width="135dp"
                                android:layout_height="135dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/iv_noprofimg"
                                android:layout_width="135dp"
                                android:layout_height="135dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/iv_profadd"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_photo_edit" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2.7dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_membertype"
                                android:layout_width="36.7dp"
                                android:layout_height="20.3dp"
                                android:background="@drawable/remarriage_bg"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="재혼"
                                android:textColor="@color/white_color"
                                android:textSize="10.7dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_nick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:includeFontPadding="false"
                                android:text="야친구하자"
                                android:textColor="@color/color_2f3942"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="홍길동"
                                android:textColor="@color/color_4d4d4d"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:background="@drawable/getmarried_img_textcutline_190902" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="여성"
                                android:textColor="@color/women_color"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:background="@drawable/getmarried_img_textcutline_190902" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="40세"
                                android:textColor="@color/color_4d4d4d"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:background="@drawable/getmarried_img_textcutline_190902" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="서울 강남구"
                                android:textColor="@color/color_4d4d4d"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_btn_myprof"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/sel_round_background"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="추가 정보 수정"
                                android:textColor="@color/white_color"
                                android:textStyle="bold"
                                android:textSize="11.8dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginLeft="12.3dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/icon_my" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="17.3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/color_2f3942"
                        android:textStyle="bold"
                        android:text="자기소개글"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:includeFontPadding="false"
                        android:text="(한글30자 - 300자까지)"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_countText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_222222"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:text=" / 300"
                        android:textColor="@color/color_222222"
                        android:textSize="14dp" />
                </LinearLayout>

