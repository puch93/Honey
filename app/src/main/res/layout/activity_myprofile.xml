                <!--180dp-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_box_00"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="SNS 및 연락처 입력시 자동차단 됩니다."
                        android:padding="13dp"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:adjustViewBounds="true"
                            android:src="#fcff00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/color_2f3942"
                            android:textStyle="bold"
                            android:text="사진정보"
                            />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="는 회원님의 가려진 정보 입니다."
                        android:textColor="@color/color_222222"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:adjustViewBounds="true"
                                android:src="#fcff00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="@color/color_2f3942"
                                android:textStyle="bold"
                                android:text="사진정보"
                                />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="총 "
                        android:textStyle="bold"
                        android:textColor="@color/color_f94545"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_all_count"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="1"
                        android:textColor="@color/color_f94545"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="장"
                        android:textColor="@color/color_f94545"
                        android:textSize="13dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:includeFontPadding="false"
                        android:text="( 인증사진 "
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_profileimg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="1"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="장 / 소개사진 "
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_introimg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="장 )"
                        android:textColor="@color/color_4d4d4d"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/ll_regphoto"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_logout"
                        android:gravity="center"
                        android:text="사진등록"
                        android:textColor="@color/white_color"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/input_box_00"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_modify"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_ec4e4e"
                    android:gravity="center"
                    android:text="수정완료"
                    android:textColor="@color/white_color"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

