            <!--            android:textSize="16dp" />-->

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/getmarried_btn_chat_profile_190902"
                android:gravity="center"
                android:text="프로필"
                android:textColor="@color/white_color" />

            <LinearLayout
                android:id="@+id/ll_favorite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="22dp">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_star_190902" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="즐겨찾기"
                    android:textColor="@color/color_8345f3"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/btn_msgbox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sel_chatbtns"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메세지함"
                    android:textColor="@color/color_4d4d4d"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_chat_btnsview_190902" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_block"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:background="@drawable/sel_chatbtns"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차단하기"
                    android:textColor="@color/color_4d4d4d"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_chat_btnsview_190902" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:background="@drawable/sel_chatbtns"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제하기"
                    android:textColor="@color/color_4d4d4d"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/getmarried_btn_chat_btnsview_190902" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <!--android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/color_ff6899"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/chat_notice01"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:textSize="13dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_00a2e8"
                android:text="@string/chat_notice02"/>

            <TextView
                android:id="@+id/tv_guide03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:textSize="13dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_676767"
                android:text="@string/chat_notice03"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />

        <!-- recyclerview area -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_color" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/getmarried_img_1pxline_190902" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="2dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sel_chatmore_btn" />
            </FrameLayout>

            <!--2dp-->
            <FrameLayout
                android:id="@+id/ll_btn_inter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="7dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/btn_interimg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sel_chatheart_btn" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/getmarried_bg_chat_chatinputbg_190902"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_chatmsg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="대화 내용을 입력하세요"
                    android:paddingLeft="14dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/btn_msgsend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1px"
                    android:layout_marginRight="0.1px"
                    android:layout_marginBottom="1px"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sel_chatsend_btn" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_interimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone" />
    </LinearLayout>
</layout>